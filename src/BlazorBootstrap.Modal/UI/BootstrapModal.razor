@inherits BlazorBootstrap.Modal.UI.BootstrapModalBase
@*<div class="modal-backdrop fade @(IsVisible ? "d-block show": "d-none")" @onclick="@CloseModal"></div>*@

<div id="modal-@(ModalService?.Id ?? "default")" class="modal @(IsVisible ? "show" : "") @(ModalService?.Configuration?.FadeAnimation == true ? "fade" : "") " data-backdrop="@(ModalService?.Configuration?.StaticBackdrop == true ? "static" : "true")" data-keyboard="@(ModalService?.Configuration?.StaticBackdrop == true ? "false" : "true")" tabindex="-1" role="dialog">
    <div class="modal-dialog @(ModalService?.Configuration?.Size ?? "") @(ModalService?.Configuration?.VerticallyCentered == true ? "modal-dialog-centered" : "") @(ModalService?.Configuration?.ScrollableBodyContent == true ? "modal-dialog-scrollable" : "")" role="document">
        <div class="modal-content">
            @if (ModalService?.Configuration == null || ModalService?.Configuration?.ShowHeader == true)
            {
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">@Title</h5>
                    <button type="button" class="close" aria-label="Close" @onclick="@CloseModal">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            <div class="modal-body">
                @Content
            </div>
            @if (ModalService?.Configuration?.ShowFooter == true)
            {
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Save changes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            }
        </div>
    </div>
</div>